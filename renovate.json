{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "customManagers:dockerfileVersions",
    "customManagers:githubActionsVersions",
    "customManagers:makefileVersions"
  ],
  "baseBranchPatterns": [
    "master",
    "release-1.13",
    "release-1.14"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchBaseBranches": [
        "master"
      ],
      "matchPackageNames": [
        "*"
      ],
      "schedule": [
        "* 15-23 * * *"
      ],
      "automerge": true
    },
    {
      "matchPackageNames": [
        "k8s.io/**",
        "sigs.k8s.io/**",
        "github.com/kubernetes/**",
        "kubernetes/**"
      ],
      "groupName": "kubernetes"
    },
    {
      "matchPackageNames": [
        "golang.org/x/**",
        "go"
      ],
      "groupName": "golang"
    },
    {
      "matchBaseBranches": [
        "release-*"
      ],
      "extends": [
        "security:only-security-updates"
      ],
      "automerge": true
    },
    {
      "matchPackageNames": [
        "golang.org/x/**",
        "go"
      ],
      "enabled": true,
      "automerge": true
    },
    {
      "matchDatasources": ["golang-version"],
      "rangeStrategy": "bump",
      "automerge": true,
      "enabled": true
    },
    {
      "matchUpdateTypes": [
        "digest"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "github.com/kubeovn/**",
        "windows"
      ],
      "enabled": false
    }
  ]
}
